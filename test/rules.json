{
  "version": "2.1",
  "rules": [
    {
      "id": "id",
      "name": "some name",
      "tags": {
        "type": "security_scanner",
        "crs_id": "0",
        "category": "attack_attempt"
      },
      "conditions": [
        {
          "parameters": {
            "inputs": [
              {
                "address": "server.request.headers.no_cookies"
              }
            ],
            "list": [
              "hello world"
            ]
          },
          "operator": "phrase_match"
        }
      ],
      "transformers": [
        "lowercase"
      ]
    },
    {
      "id": "nfd-000-001",
      "name": "weird case",
      "tags": {
        "type": "security_scanner"
      },
      "conditions": [
        {
          "operator": "match_regex",
          "parameters": {
            "inputs": [
              {
                "address": "server.response.status"
              }
            ],
            "regex": "^404$",
            "options": {
              "case_sensitive": true
            }
          }
        }
      ],
      "transformers": [
        "lowercase"
      ]
    }
  ]
}

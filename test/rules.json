{
  "version":"1.0",
  "events":[
    {
      "id":"id",
      "name": "some name",
      "tags":{
        "type":"security_scanner",
        "crs_id":"0"
      },
      "conditions":[
        {
          "operation":"phrase_match",
          "parameters":{
            "inputs":[
              "server.request.headers.no_cookies"
            ],
            "list":[
              "hello world"
            ]
          }
        }
      ],
      "transformers":[
        "lowercase"
      ],
      "action":"record"
    },
    {
      "id": "nfd-000-001",
      "name": "weird case",
      "tags": {
        "type": "security_scanner"
      },
      "conditions": [
        {
          "operator": "match_regex",
          "parameters": {
            "inputs": [
              {
                "address": "server.response.status"
              }
            ],
            "regex": "^404$",
            "options": {
              "case_sensitive": true
            }
          }
        }
      ],
      "transformers": [
        "lowercase"
      ]
    }
  ]
}
